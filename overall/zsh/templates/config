# Created by newuser for 5.4.1
# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
setopt appendhistory autocd nomatch
unsetopt beep extendedglob
bindkey -v
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/stcarolas/.zshrc'

autoload -Uz compinit
compinit
zstyle ':completion:*' menu select
zstyle ':completion:*' rehash true
# End of lines added by compinstall

for file in ~/.config/zsh/*; do
  source "$file"
done

autoload -Uz add-zsh-hook
chback_on_chdir () {
  clear
  ls -1 --group-directories-first
}
add-zsh-hook chpwd chback_on_chdir

m1Show() { BUFFER=". jump"; zle accept-line; }
back() { BUFFER="cd .."; zle accept-line; }
edit() { BUFFER="fzf --bind \"enter:execute(vim {})+abort\""; zle accept-line; }

zle -N m1Show
zle -N back
zle -N edit
bindkey '\ej' m1Show
bindkey "\eh" back
bindkey "\eo" edit
