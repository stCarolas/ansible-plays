font pango:monospace 8
focus_follows_mouse no
hide_edge_borders smart
set $mod Mod4
floating_modifier $mod

bindsym $mod+Return exec ~/.local/bin/alacritty
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+h fullscreen disable; focus left
bindsym $mod+j fullscreen disable; focus down
bindsym $mod+k fullscreen disable; focus up
bindsym $mod+l fullscreen disable; focus right
bindsym $mod+o fullscreen disable; focus parent
bindsym $mod+i fullscreen disable; focus child

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+u fullscreen disable; split h
bindsym $mod+v fullscreen disable; split v
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle

bindsym $mod+n mode "navigation"
mode "navigation" {
    bindsym h mode "default"; workspace 1: Firefox
    bindsym j mode "default"; workspace 2: Local Terminal
    bindsym k mode "default"; workspace 3: Remote Terminal
    bindsym l mode "default"; workspace 4: Back Jobs

    bindsym Shift+h move container to workspace 1: Firefox
    bindsym Shift+j move container to workspace 2: Local Terminal
    bindsym Shift+k move container to workspace 3: Remote Terminal
    bindsym Shift+l move container to workspace 4: Back Jobs

    bindsym w mode "default"; exec rofi -show window -matching fuzzy
    bindsym n mode "default"; exec ~/.config/i3/new_workspace.sh
    bindsym space exec ~/.config/i3/wsselect.sh

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+m mode "command"
mode "command" {
    bindsym m mode "default"; exec /home/stcarolas/Coding/scripts/mark
    bindsym u mode "default"; exec /home/stcarolas/Coding/scripts/unmark
    bindsym g mode "default"; exec /home/stcarolas/Coding/scripts/goto

    bindsym p mode "default"; exec cd ~/Downloads && scrot
    bindsym e mode "default"; exec rofi -show drun

    bindsym s fullscreen disable; scratchpad show
    bindsym h fullscreen disable;  move window to scratchpad
    bindsym r mode "default"; exec ~/.config/i3/rename_workspace.sh

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

for_window [class="Firefox"] border pixel 1
for_window [class="Conky"] move window to scratchpad

exec --no-startup-id setxkbmap -layout "us,ru" -option grp:toggle -option ctrl:swapcaps
exec --no-startup-id sleep 60
exec --no-startup-id xcape
exec --no-startup-id feh --bg-fill ~/Wall/wallhaven-465640.png
