font pango:monospace 8
focus_follows_mouse no
hide_edge_borders smart
set $mod Mod4
floating_modifier $mod

bindsym $mod+Return exec ~/.local/bin/alacritty
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+h fullscreen disable; focus left
bindsym $mod+j fullscreen disable; focus down
bindsym $mod+k fullscreen disable; focus up
bindsym $mod+l fullscreen disable; focus right
bindsym $mod+o fullscreen disable; focus parent
bindsym $mod+i fullscreen disable; focus child

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+u fullscreen disable; split h
bindsym $mod+v fullscreen disable; split v
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle

bindsym $mod+1 mode "default"; workspace 1
bindsym $mod+2 mode "default"; workspace 2
bindsym $mod+3 mode "default"; workspace 3
bindsym $mod+4 mode "default"; workspace 4

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4

bindsym $mod+n mode "default"; exec rofi -show window -matching fuzzy

bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+m mode "command"
mode "command" {
    bindsym p mode "default"; exec cd ~/Downloads && scrot
    bindsym e mode "default"; exec rofi -show drun

    bindsym s mode "default"; scratchpad show
    bindsym h mode "default"; move window to scratchpad

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

for_window [class="Firefox"] border pixel 1
for_window [class="music"] move window to scratchpad
for_window [class="Conky"] floating toggle
bindsym F1 exec ~/.config/conky/conky.sh
for_window [title="VirtualBox"] move window to scratchpad
for_window [title=".*WinDev.*"] move window to workspace 3

exec --no-startup-id setxkbmap -layout "us,ru" -option grp:toggle -option ctrl:swapcaps
exec --no-startup-id sleep 30 && xcape
exec --no-startup-id feh --bg-fill ~/Pictures/Wall/back
